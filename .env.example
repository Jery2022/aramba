# .env.example — Configuration de l'application Actualités

# URI de connexion à MongoDB (remplacer <username>, <password> et <dbname>)
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/<dbname>

# Clé secrète pour signer les tokens JWT
JWT_SECRET=your_jwt_secret_key

# Port sur lequel le serveur Express doit écouter
PORT=5000

# Adresse email de l'administrateur initial (optionnel)
ADMIN_EMAIL=admin@example.com

# Mot de passe de l'administrateur initial (optionnel)
ADMIN_PASSWORD=adminpassword

# Niveau de logs (ex: dev, combined, tiny)
LOG_LEVEL=dev

# Durée de validité du token JWT (ex: 1d, 12h)
JWT_EXPIRES_IN=1d

# Origine autorisée pour les requêtes CORS (ex: http://localhost:3000)
CLIENT_ORIGIN=http://localhost:3000
